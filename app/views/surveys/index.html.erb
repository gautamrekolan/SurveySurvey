<table>
  <tr>
    <th>Name</th>
  </tr>
  <% for survey in @surveys %>
    <tr>
      <td><%= link_to survey.name, survey %></td>
      <% if signed_in? and current_user.admin? %>
      <td><%= link_to "Edit", edit_survey_path(survey) %></td>
      <td><%= link_to "Delete", survey, :method => :delete, :confirm => "Are you sure?",
											  :title => "Delete #{survey.name}" %>
	  </td>
      <% end %>
    </tr>
  <% end %>
</table>

<% if signed_in? and current_user.admin? %>
<p><%= link_to "New Survey", new_survey_path %></p>
<% end %>
